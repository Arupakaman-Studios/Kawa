<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="nativeAd"
            type="com.google.android.gms.ads.nativead.NativeAd" />
    </data>

    <com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/nativeAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/bg_koan">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/_20sdp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/_20sdp" />

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:contentDescription="@string/content_desc_koan_image"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/img_koan1" />

            <!--<ImageView
                android:id="@+id/imgKawaCircle"
                android:src="@drawable/ic_kawa_circle"
                app:layout_constraintEnd_toStartOf="@+id/imgKoan"
                app:layout_constraintStart_toStartOf="@+id/imgKoan"
                app:layout_constraintTop_toBottomOf="@+id/imgKoan"
                app:layout_constraintBottom_toBottomOf="@+id/imgKoan"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:contentDescription="@string/content_desc_koan_image" />-->

            <ImageView
                android:id="@+id/imgKawaCircle"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:contentDescription="@string/content_desc_koan_image"
                android:src="@drawable/ic_kawa_circle"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPrice"
                android:paddingHorizontal="@dimen/_7sdp"
                android:ellipsize="end"
                android:maxLines="1"
                app:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceBody1"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="@+id/imgKawaCircle"
                app:layout_constraintEnd_toEndOf="@+id/imgKawaCircle"
                app:layout_constraintStart_toStartOf="@+id/imgKawaCircle"
                app:layout_constraintTop_toTopOf="@+id/imgKawaCircle"
                tools:text="//01" />

           <!-- <TextView
                android:id="@+id/txtAdStore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:text="Google"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/imgKawaCircle"
                app:layout_constraintEnd_toEndOf="@+id/txtCallToAction"
                app:layout_constraintTop_toBottomOf="@+id/txtCallToAction" />-->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/txtCallToAction"
                android:textSize="@dimen/_10ssp"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constrainedWidth="true"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/dividerKoan"
                android:text="INSTALL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_desc_open_koan"
                android:padding="0dp"
                android:src="@drawable/ic_semi_circle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                app:layout_constraintTop_toBottomOf="@+id/imgKawaCircle" />

            <!--<com.google.android.material.textview.MaterialTextView
                android:includeFontPadding="false"
                android:layout_marginBottom="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgKawaCircle"
                app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                android:textSize="@dimen/_20ssp"
                android:textAppearance="?textAppearanceCaption"
                android:text="@string/letter_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>-->

            <View
                android:id="@+id/dividerKoan"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="?colorBorder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgKawaCircle"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtAdAttribution"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="@+id/dividerKoan"
                app:layout_constraintStart_toEndOf="@+id/dividerKoan"
                style="@style/Theme.Kawa.AdAttribution" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtHeadLine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="how grass &amp; trees became enlightened"
                android:textAppearance="@style/subtitle1"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toTopOf="@+id/ratingAdStars"
                app:layout_constraintEnd_toStartOf="@+id/dividerKoan"
                app:layout_constraintStart_toEndOf="@+id/guidelineStart"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtAdAdvertiser"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:layout_marginEnd="@dimen/_5sdp"
                android:text="Advertiser"
                android:textAppearance="?textAppearancePopupMenuHeader"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/ratingAdStars"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/txtHeadLine"
                app:layout_constraintTop_toTopOf="@+id/ratingAdStars"
                app:layout_constraintBottom_toBottomOf="@+id/ratingAdStars"/>

            <RatingBar
                android:id="@+id/ratingAdStars"
                android:layout_marginTop="@dimen/_5sdp"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5"
                app:layout_constraintBottom_toTopOf="@+id/txtAdBody"
                app:layout_constraintEnd_toEndOf="@+id/txtHeadLine"
                app:layout_constraintStart_toEndOf="@+id/txtAdAdvertiser"
                app:layout_constraintTop_toBottomOf="@+id/txtHeadLine"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtAdBody"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="This is the body"
                android:textAppearance="?textAppearanceCaption"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ratingAdStars"
                app:layout_constraintEnd_toEndOf="@+id/txtHeadLine"
                app:layout_constraintStart_toStartOf="@+id/txtHeadLine"
                tools:text="This is the ad body" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.gms.ads.nativead.NativeAdView>
</layout>