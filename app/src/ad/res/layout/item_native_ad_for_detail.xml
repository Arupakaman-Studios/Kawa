<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="nativeAd"
            type="com.google.android.gms.ads.nativead.NativeAd" />
    </data>

    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/nativeAdView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/_20sdp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/_20sdp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtAdAttribution"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            style="@style/Theme.Kawa.AdAttribution" />

        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/imgNativeAd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_desc_koan_image"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toTopOf="@+id/txtAdAttribution"
            tools:src="@drawable/img_koan1" />


        <ImageView
            android:id="@+id/imgAppIcon"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/imgNativeAd"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:adjustViewBounds="true" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtAdTitle"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/sawarabi_mincho_regular"
            android:textAppearance="@style/headline6"
            app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
            app:layout_constraintStart_toEndOf="@+id/imgAppIcon"
            app:layout_constraintTop_toBottomOf="@+id/imgNativeAd"
            tools:text="if you love, love openly" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtAdAdvertiser"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="Advertiser"

            android:textAppearance="?textAppearancePopupMenuHeader"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/ratingAdStars"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/txtAdTitle"
            app:layout_constraintTop_toTopOf="@+id/ratingAdStars"
            app:layout_constraintBottom_toBottomOf="@+id/ratingAdStars"/>

        <RatingBar
            android:id="@+id/ratingAdStars"
            android:layout_marginTop="@dimen/_5sdp"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            app:layout_constraintTop_toBottomOf="@+id/txtAdTitle"
            app:layout_constraintEnd_toEndOf="@+id/txtAdTitle"
            app:layout_constraintStart_toEndOf="@+id/txtAdAdvertiser"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCallToAction"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_10ssp"
            android:text="INSTALL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_desc_open_koan"
            android:padding="0dp"
            android:src="@drawable/ic_semi_circle"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/imgAppIcon" />

        <TextView
            android:id="@+id/txtAdStore"
            android:padding="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@+id/btnCallToAction"
            app:layout_constraintStart_toEndOf="@+id/btnCallToAction"
            app:layout_constraintBottom_toBottomOf="@+id/btnCallToAction"
            app:layout_constrainedWidth="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/txtAdPrice"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toTopOf="@+id/txtAdStore"
            app:layout_constraintStart_toEndOf="@+id/txtAdStore"
            app:layout_constraintBottom_toBottomOf="@+id/txtAdStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_12ssp" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtAdDescription"
            android:justificationMode="inter_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:lineSpacingMultiplier="1.3"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/btnCallToAction"
            tools:text="Twenty monks and one nun, who was named Eshun, were practicing meditation with a certain Zen master.

\n\nEshun was very pretty even though her head was shaved and her dress plain. Several monks secretly fell in love with her. One of them wrote her a love letter, insisting upon a private meeting.

\n\nEshun did not reply. The following day the master gave a lecture to the group, and when it was over, Eshun arose. Addressing the one who had written to her, she said: &quot;If you really love me so much, come and embrace me now.&quot;

