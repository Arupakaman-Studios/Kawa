<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="@integer/reply_motion_duration_large">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constrainedHeight="true"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="@+id/guidelineStart"
            android:layout_marginTop="@dimen/_50sdp"
            android:id="@+id/imgKoan"
            android:alpha="0" />
        <Constraint
            android:id="@+id/txtArtName"
            motion:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/imgKoan"
            motion:layout_constraintStart_toStartOf="@+id/guidelineStart"
            android:layout_marginTop="@dimen/_15sdp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/txtArtistName"
            motion:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/txtArtName"
            motion:layout_constrainedHeight="true"
            motion:layout_constraintStart_toStartOf="@+id/guidelineStart"
            android:layout_marginTop="@dimen/_10sdp"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>