<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="fontFamily">@font/libre_baskerville_regular</item>
    </style>

    <style name="subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/libre_baskerville_regular</item>
    </style>

    <style name="defaultTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/libre_baskerville_regular</item>
    </style>

    <style name="defaultEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/libre_baskerville_regular</item>
        <item name="android:textColor">?editTextColor</item>
    </style>



    <style name="Theme.Kawa.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_up</item>
        <item name="android:windowExitAnimation">@anim/scale_down</item>
    </style>


    <style name="Theme.Kawa.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">@dimen/_2sdp</item>
        <item name="android:paddingEnd">@dimen/_2sdp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">@color/colorRedSun</item>
    </style>
</resources>