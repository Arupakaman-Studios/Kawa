<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kawa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorLayoutBackgroundLight</item>
        <item name="android:colorBackground">@color/colorLayoutBackgroundLight</item>

        <!-- Custom colors -->
        <item name="colorImageFrameBackground">@color/colorFrameLight</item>
        <item name="colorBorder">@color/colorBorderLight</item>
        <item name="colorKoanBg">@color/colorKoanBgLight</item>
        <item name="colorItemSelected">@color/colorItemSelectedLight</item>
        <item name="colorItemUnselected">@color/colorItemUnselectedLight</item>


        <item name="textAppearanceHeadline6">@style/headline6</item>
        <item name="android:textViewStyle">@style/defaultTextViewStyle</item>
    </style>


</resources>