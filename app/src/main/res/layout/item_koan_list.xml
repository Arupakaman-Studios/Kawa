<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="highlightedKoan"
            type="com.arupakaman.kawa.model.HighlightedKoans" />
        <variable
            name="koanClickListener"
            type="com.arupakaman.kawa.ui.koans.list.KoanClickListener" />
    </data>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:onClick="@{(view)->koanClickListener.onClick(view,highlightedKoan.koan)}"
    android:padding="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        htmlString="@{highlightedKoan.highlightedString}"
        tools:text="...if you really love me so much..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="@dimen/_3sdp"
        android:background="?colorBorder"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
</layout>